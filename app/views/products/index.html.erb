<h1>商品列表</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <td>商品名稱</td>
      <td>商品圖片</td>
      <td>售價</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td><%= link_to product.name, product %></td>
      <td><%= image_tag(product.image.small) %></td>
      <td><%= product.price %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @products, theme: 'twitter-bootstrap-3' %>
