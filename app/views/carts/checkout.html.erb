<% content_for :head_js do %>
<script src="https://js.braintreegateway.com/v2/braintree.js"></script>
<% end %>

<h1>結帳</h1>
<%= render 'cart_list' %>
<hr />

<%= simple_form_for(@order) do |f| %>

  <%= f.input :name, label:false, placeholder:'收件者姓名' %>
  <%= f.input :tel, label:false, placeholder:'電話' %>
  <%= f.input :address, label:false, placeholder:'收件地址' %>
  <%= f.input :will_receive_email %>
  <hr />
  <div id="dropin"></div>
  <hr />
  <%= f.submit %>

<% end %>
<hr />

<script>
braintree.setup(
  "<%= @braintree_token %>",
  'dropin', {
    container: 'dropin'
  });
</script>

