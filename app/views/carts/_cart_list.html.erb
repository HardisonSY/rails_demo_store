<table class="table table-hover">
  <thead>
    <tr>
      <td>商品名稱</td>
      <td>數量</td>
      <td>金額</td>
    </tr>
  </thead>
  <% @cart.items.each do |item| %>
    <tr>
      <td><%= item.product.name %></td>
      <td><%= item.quantity %></td>
      <td><%= item.price %></td>
    </tr>
  <% end %>
  <tfoot>
    <tr>
      <td colspan="2">總價</td>
      <td><%= @cart.total_price %></td>
    </tr>
  </tfoot>
</table>
